# Replicate API Configuration
# Get your API token from: https://replicate.com/account/api-tokens
REPLICATE_API_TOKEN=your_replicate_api_token_here

# Cloudflare R2 Storage Configuration
# Get from: https://dash.cloudflare.com -> R2 Object Storage
STORAGE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
STORAGE_REGION=auto
STORAGE_ACCESS_KEY=your_r2_access_key_id  
STORAGE_SECRET_KEY=your_r2_secret_access_key
STORAGE_BUCKET=your_r2_bucket_name
STORAGE_DOMAIN=your_custom_domain.com

# Legacy Cloudflare R2 Configuration (for backward compatibility)
# CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
# CLOUDFLARE_R2_BUCKET=your_r2_bucket_name
# CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id  
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
# CLOUDFLARE_R2_PUBLIC_DOMAIN=files.yourdomain.com

# Next.js Configuration
NEXT_PUBLIC_WEB_URL=http://localhost:3000

# Optional: YouTube API Key (for enhanced features)
# YOUTUBE_API_KEY=your_youtube_api_key_here

# File Upload Configuration
MAX_UPLOAD_SIZE_MB=500

# Cache Configuration
CACHE_CLEANUP_INTERVAL_HOURS=1
DEFAULT_CACHE_TTL_DAYS=30